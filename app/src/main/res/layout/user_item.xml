<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="@dimen/height_user_item">
    <ImageView
        android:layout_width="@dimen/height_user_item"
        android:layout_height="0dp"

        android:id="@+id/iv_picture_user_item"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"

        android:id="@+id/ll_tv_user_item"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        app:layout_constraintLeft_toRightOf="@+id/iv_picture_user_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        android:layout_weight="1"
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/tv_name_user_item"
            android:text="@string/btn_update_list_act_text"
            android:gravity="center_vertical"

            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/tv_url_user_item"
            android:text="@string/btn_update_list_act_text"
            android:gravity="center_vertical"
            android:textSize="10sp"

            android:layout_weight="1"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>